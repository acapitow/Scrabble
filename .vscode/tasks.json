{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Scrabble",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall",
                "-Wextra",
                "-std=c11",
                "-o",
                "${workspaceFolder}/output/scrabble.exe",
                "${workspaceFolder}/src/main.c",
                "${workspaceFolder}/src/board.c",
                "${workspaceFolder}/src/utils.c",
                "${workspaceFolder}/src/easel.c",
                "${workspaceFolder}/src/game.c",
                "${workspaceFolder}/src/letter.c"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
